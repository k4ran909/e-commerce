# ============================================
# DOCKER COMPOSE PRODUCTION ENVIRONMENT
# Copy to .env and fill in production values
# ============================================

# ============================================
# DATABASE
# ============================================
POSTGRES_USER=jewelry_admin
POSTGRES_PASSWORD=change_me_to_a_secure_password_min_32_chars
POSTGRES_DB=jewelry_commerce_db

# ============================================
# SECURITY (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# ============================================
JWT_SECRET=change_me_generate_a_secure_random_string_min_32_chars
COOKIE_SECRET=change_me_generate_another_secure_random_string_min_32_chars

# ============================================
# CORS - Your production domains
# ============================================
STORE_CORS=https://jewelrycommerce.com,https://www.jewelrycommerce.com
ADMIN_CORS=https://admin.jewelrycommerce.com,https://api.jewelrycommerce.com
AUTH_CORS=https://jewelrycommerce.com,https://api.jewelrycommerce.com

# ============================================
# BACKEND URL
# ============================================
MEDUSA_BACKEND_URL=https://api.jewelrycommerce.com
MEDUSA_WORKER_MODE=shared
DISABLE_MEDUSA_ADMIN=false

# ============================================
# STRIPE PAYMENT
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_live_your_live_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret
STRIPE_CAPTURE=true

# ============================================
# PAYPAL PAYMENT (Optional)
# ============================================
# PAYPAL_CLIENT_ID=your_live_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_live_paypal_client_secret
# PAYPAL_WEBHOOK_ID=your_live_paypal_webhook_id
# PAYPAL_SANDBOX=false

# ============================================
# RAZORPAY PAYMENT (Optional - India)
# ============================================
# RAZORPAY_ID=rzp_live_your_key_id
# RAZORPAY_SECRET=your_razorpay_live_secret
# RAZORPAY_ACCOUNT=your_merchant_id
# RAZORPAY_WEBHOOK_SECRET=your_live_webhook_secret

# ============================================
# S3 FILE STORAGE (Recommended for production)
# ============================================
# S3_FILE_URL=https://jewelry-commerce.s3.amazonaws.com
# S3_ACCESS_KEY_ID=your_aws_access_key
# S3_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_REGION=us-east-1
# S3_BUCKET=jewelry-commerce-uploads
# S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# ============================================
# SENDGRID EMAIL (Recommended for production)
# ============================================
# SENDGRID_API_KEY=SG.your_live_sendgrid_api_key
# SENDGRID_FROM=orders@jewelrycommerce.com
