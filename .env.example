# ============================================
# JewelryCommerce Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# CURRENT BACKEND (Express Server)
# ============================================
# Copy to .env and set a valid Postgres connection string
# Example: postgres://user:password@localhost:5432/jewelcommerce
DATABASE_URL=your_database_connection_string
JWT_SECRET=your_jwt_secret_key

# ============================================
# MEDUSAJS BACKEND INTEGRATION
# ============================================
# MedusaJS backend URL (default: http://localhost:9000)
VITE_MEDUSA_BACKEND_URL=http://localhost:9000

# Publishable API Key (get from Medusa Admin > Settings > API Keys)
VITE_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key

# ============================================
# STRIPE PAYMENT (Frontend)
# ============================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# PAYPAL PAYMENT (Frontend)
# ============================================
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# ============================================
# RAZORPAY PAYMENT (Frontend - India)
# ============================================
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_NAME=JewelryCommerce
VITE_APP_URL=http://localhost:5173